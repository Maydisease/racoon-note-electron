{
	"name": "note",
	"version": "1.0.0",
	"description": "",
	"main": "./dist/electron-start.js",
	"scripts": {
		"start:dev": "cross-env NODE_ENV=development electron .",
		"start:pro": "cross-env NODE_ENV=production electron .",
		"package:win": "electron-packager ./dist --overwrite --platform=win32 --arch=x64 --out=./build --icon=assets/app-icon/win/app.ico",
		"package:mac": "electron-packager ./dist --overwrite --platform=darwin --arch=x64 --out=./build --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist --darwinDarkModeSupport=true",
		"build:win": "gulp clear && tsc && gulp writePkg && npm run package:win && gulp copyNodeModules",
		"build:mac": "bash ./build.mac.sh",
		"watch": "concurrently \"tsc -w\""
	},
	"author": "",
	"license": "ISC",
	"devDependencies": {
		"concurrently": "^4.1.0",
		"cross-env": "^5.2.0",
		"electron": "^4.0.1",
		"rxjs": "^6.3.3",
		"typeorm": "^0.2.12"
	},
	"dependencies": {
		"@types/electron": "^1.6.10",
		"@types/sqlite3": "^3.1.3",
		"del": "^3.0.0",
		"electron-log": "^3.0.1",
		"gulp": "^4.0.0",
		"gulp-util": "^3.0.8"
	}
}
